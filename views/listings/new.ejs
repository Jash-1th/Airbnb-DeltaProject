    <%- layout("/layouts/boilerplate") %>
    <style>
        @media (max-width : 575px) {
            .offset-2{
            position: relative ;
            left: -50px ;
        }
        }
    </style>

    <div class="row mt-3">
        <div class="col-sm-8 offset-2">
           
        <h3>Create new listing</h3>
        
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="from-label" for="title" >Title</label>
                    <input type="text" name ="listing[title]" placeholder="Add a catchy title" id="title" class="form-control" required>
                    <div class="valid-feedback">Title Looks Good</div>
                    <div class="invalid-feedback">Title should be required</div>
                </div>
                <div class="mb-3">
                    <label class="from-label" for="description">Description</label>
                     <textarea name ="listing[description]" placeholder="enter description" class="form-control" id="description" required></textarea>
                     <div class="invalid-feedback">Description should be valid</div>
                </div>
               
                <div class="mb-3">
                    <label class="from-label" for="imageURL">Upload Image</label>
                    <input type="file" id="imageURL" class="form-control"name="listing[image]" >

                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label class="from-label" for="price">Price</label>
                        <input type="number" name ="listing[price]" placeholder="1200" class="form-control" id="price" required>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label class="from-label" for="country">Country</label>
                        <input type="text" name ="listing[country]" placeholder="India" id="country" class="form-control" required>
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="from-label" for="location">Location</label>
                    <input type="text" name ="listing[location]" placeholder="Tirupati" id="location" class="form-control" required>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
            <button class="btn btn-dark add-btn mt-3 mb-3" >Add</button>
            
            </form>
        </div>
    </div>
    
</body>
